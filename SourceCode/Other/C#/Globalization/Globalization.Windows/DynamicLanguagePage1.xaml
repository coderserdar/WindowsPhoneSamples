<Page
    x:Class="Globalization.DynamicLanguagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Globalization"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="AppTitle" Text="" FontSize="36"  Margin="200,0,0,0" ></TextBlock>


        <TextBlock x:Name="txtEmail" Text="" FontSize="20" Margin="200,214,0,-24" ></TextBlock>
        <TextBlock x:Name="txtDate" Text="" Margin="200,253,0,-212" FontSize="20"  />
        <ComboBox x:Name="CmboxLanguage" SelectionChanged="CmboxLanguage_SelectionChanged" ToolTipService.ToolTip="Select Language" HorizontalAlignment="Left" Margin="200,121,0,0" VerticalAlignment="Top" Width="120">
            <TextBlock Text="English - US"/>
            <TextBlock Text="Spanish - Spain"/>
        </ComboBox>

        <Button x:Name="BtnBack" Margin="36,52,0,653" RenderTransformOrigin="2.986,4.318" Content="Back" Height="63" Width="147" Click="BtnBack_Click" />

    </Grid>
</Page>
